# Development Environment Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
MAX_FILE_SIZE=10mb
TRUST_PROXY=false

# JWT Configuration
JWT_SECRET=dev-secret-key-for-development-only
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Encryption & Session
ENCRYPTION_KEY=dev-encryption-key-32-characters
SESSION_SECRET=dev-session-secret-for-development
SESSION_MAX_AGE=86400000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cown2_dev
MONGODB_MAX_POOL_SIZE=10
MONGODB_TIMEOUT=5000

# MySQL Configuration (Development)
MYSQL_URI=mysql://root:password@localhost:3306/cown2_dev
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=cown2_dev
MYSQL_MAX_CONNECTIONS=10
MYSQL_SSL_MODE=DISABLED
MYSQL_TIMEOUT=5000
MYSQL_CHARSET=utf8mb4

# Redis Configuration (Development)
REDIS_URI=redis://localhost:6379
REDIS_MAX_CONNECTIONS=5

# Neo4j Configuration (Development)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=false
XSS_PROTECTION=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/dev.log
ERROR_LOG_FILE=logs/dev-error.log
ENABLE_REQUEST_LOGGING=true

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=test
SMTP_PASS=test
EMAIL_FROM=dev@cown2.local
EMAIL_USER=dev@cown2.local
EMAIL_PASSWORD=test

# Socket & WebRTC Configuration
SOCKET_IO_ORIGINS=http://localhost:3000
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302

# File Upload Configuration
UPLOAD_PATH=./dev-uploads
AVATAR_PATH=./dev-uploads/avatars
MAX_AVATAR_SIZE=5mb
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Debug Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=true
