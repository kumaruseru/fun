# CosmicProto Social Network - Environment Variables

# Server Configuration
PORT=10000
HOST=0.0.0.0
NODE_ENV=production

# Security Settings
ENABLE_HTTPS=false
CORS_ORIGINS=http://localhost:10000,http://127.0.0.1:10000,http://0.0.0.0:10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SLOW_DOWN_THRESHOLD=50

# File Upload
MAX_FILE_SIZE=10mb

# MongoDB Cloud Database (Required for encrypted data storage)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cosmic_social?retryWrites=true&w=majority
MONGODB_MAX_POOL_SIZE=50
MONGODB_TIMEOUT=10000

# Optional Database Connections
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=cosmic_social

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# JWT Secrets (Generate strong secrets)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (Generate with crypto.randomBytes(32).toString('hex'))
MASTER_ENCRYPTION_KEY=your-master-encryption-key-here
FIELD_ENCRYPTION_KEY=your-field-encryption-key-here
